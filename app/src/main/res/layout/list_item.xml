<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemContainer"
    android:background="?attr/selectableItemBackground"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:padding="@dimen/keyline">

    <TextView
        android:id="@+id/label_id"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/label_id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="@dimen/default_text_size"/>

    <TextView
        android:id="@+id/text_id"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:paddingStart="@dimen/text_after_label_padding"
        android:text="12345"
        app:layout_constraintStart_toEndOf="@id/label_id"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="@dimen/default_text_size"/>

    <TextView
        android:id="@+id/label_title"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/label_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label_id"
        android:textSize="@dimen/default_text_size"/>

    <TextView
        android:id="@+id/text_title"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:paddingStart="@dimen/text_after_label_padding"
        android:text="Dilwale Dulhania Le Jayenge"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/label_title"
        app:layout_constraintTop_toBottomOf="@id/text_id"
        android:textSize="@dimen/default_text_size"/>

</androidx.constraintlayout.widget.ConstraintLayout>